<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd95a"
    tools:context=".REGISTER.RegisterActivity">

    <TextView
        android:id="@+id/txtLTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Registrasi"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Aplikasi Rekomendasi Mobil Bekas"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_foto_profil" />

    <TextView
        android:id="@+id/txtKeteranganFotoProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Unggah Foto"
        android:textColor="#000000"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputNamaLengkap"
        android:layout_below="@id/txtKeteranganFotoProfil"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Nama Lengkap"
        android:textColorHint="#000000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_baseline_sentiment_satisfied_24"
        app:startIconTint="#000000"
        app:boxStrokeColor="#000000"
        app:endIconTint="#000000"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNamaLengkap"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_height="70dp"/>

    </com.google.android.material.textfield.TextInputLayout>

