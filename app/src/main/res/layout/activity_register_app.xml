<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c6bc0"
    android:padding="10dp"
    tools:context=".REGISTER.RegisterAppActivity">


    <TextView
        android:id="@+id/txtLTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Aplikasi Rekomendasi Mobil Showroom Sentra"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold|italic"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputNamaUser"
        android:layout_below="@id/judul"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Nama User"
        android:textColorHint="#ffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_baseline_sentiment_satisfied_24"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff"
        app:placeholderTextColor="#ffffff"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNamaUser"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:inputType="text"
            android:layout_height="70dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        android:layout_below="@id/textInputNamaUser"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColorHint="#ffffff"
        android:hint="Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            android:layout_height="70dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPassword"
        android:layout_below="@id/textInputEmail"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Password"
        android:textColorHint="@color/colorText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:startIconDrawable="@drawable/ic_baseline_security_24"
        app:endIconMode="password_toggle"
        app:startIconTint="@color/colorText"
        app:endIconTint="@color/colorText"
        app:boxStrokeColor="@color/colorText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:layout_height="70dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/textInputPassword"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#fbfff1"
        android:padding="15dp"
        android:text="BUAT User"
        android:textColor="#3c3744"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textSudahPunyaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"
        android:text="Memiliki Akun?"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/textSudahPunyaAkun"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#fbfff1"
        android:textSize="15sp" />
</RelativeLayout>