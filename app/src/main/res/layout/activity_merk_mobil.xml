<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADDATA_MOBIL.MerkMobilActivity"
    android:background="#ffd95a">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgBackToAddData"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            app:tint="#000000"/>
        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Mobil"
            android:layout_toRightOf="@+id/imgBackToAddData"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:tint="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:padding="10dp"
        android:background="@drawable/ic_custom_backgorund_sheet">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk Mobil ?"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMerkMobil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_hint" />
</RelativeLayout>