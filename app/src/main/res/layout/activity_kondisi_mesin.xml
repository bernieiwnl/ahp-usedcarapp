<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADDATA_MOBIL.KondisiMesinActivity">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffd95a">
        <ImageView
            android:id="@+id/backToAddData"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_centerVertical="true"
            app:tint="#FFFFFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Kriteria Mesin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backToAddData"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/body_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_layout"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtKondisiKelistrikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kondisi Kelistrikan Mobil"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                <RadioGroup
                    android:id="@+id/rdgKelistrikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtKondisiKelistrikan"
                    android:layout_marginTop="15dp"
                    >

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiKelistrikan5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiKelistrikan4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiKelistrikan3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiKelistrikan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiKelistrikan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/txtKondisiPembakaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kondisi Pembakaran Mobil"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/rdgKelistrikan"
                    android:layout_marginTop="20dp"/>

                <RadioGroup
                    android:id="@+id/rdgPembakaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtKondisiPembakaran"
                    android:layout_marginTop="15dp">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiPembakaran5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiPembakaran4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiPembakaran3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiPembakaran2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiPembakaran1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/txtKondisiRadiator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kondisi Radiator Mobil"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/rdgPembakaran"
                    android:layout_marginTop="20dp"
                    app:buttonTint="@color/colorButton"/>

                <RadioGroup
                    android:id="@+id/rdgRadiator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtKondisiRadiator"
                    android:layout_marginTop="15dp">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiRadiator5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiRadiator4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baik"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiRadiator3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiRadiator2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbKondisiRadiator1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sangat Buruk"
                        android:textSize="18sp"
                        app:buttonTint="@color/colorButton"/>

                </RadioGroup>

                <Button
                    android:id="@+id/btnSubmitMesin"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_below="@+id/rdgRadiator"
                    android:text="Submit"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorButton"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>