<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PELANGGAN.TambahPelangganAppActivity">


    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="#000000" />

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Data Pelanggan"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputNamaUser"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:hint="Nama Pelanggan"
        android:textColorHint="#000000"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#000000"
        app:endIconMode="clear_text"
        app:endIconTint="#000000"
        app:helperTextTextColor="#000000"
        app:hintTextColor="#000000"
        app:placeholderTextColor="#000000"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNamaUser"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="text"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputAlamat"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputNamaUser"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:hint="Alamat Pelanggan"
        android:textColorHint="#000000"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#000000"
        app:endIconMode="clear_text"
        app:endIconTint="#000000"
        app:helperTextTextColor="#000000"
        app:hintTextColor="#000000"
        app:placeholderTextColor="#000000"
        app:startIconDrawable="@drawable/ic_baseline_navigation_24"
        app:startIconTint="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAlamatUser"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="text"
            android:maxLines="20"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnTambahPreferensi"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5c6bc0"
        android:padding="15dp"
        android:text="Tambah Preferensi"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>